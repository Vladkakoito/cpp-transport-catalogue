//Формат заполнения базы:
//форматирование текста и порядок ключей значения не имеет

{
    "serialization_settings": {
        "file:": "имя_файла_для_сохранения_базы"
    },
    "base_requests": {
        {
            "type": "Bus",         //тип запроса
            "name": "имя_маршрута",
            "is_roundtrip": true,  //кольцевой или некольцевой маршрут
            "stops": [             //список остановок маршрута
                "остановка1",
                "остановка2",
                "остановка3",
                ...
            ]
        },
        {
            "type": "Stop",
            "name": "имя_остановки",
            "latitude": "широта",
            "longitude": "долгота",
            "road_distances": {     //расстояния до соседних остановок
                "остановка1": "расстояние1",
                "остановка2": "расстояние2",
                "остановка3": "расстояние3",
                ...
            }
        },
        {
            "routing_settings": {           //настройки для построения оптимального маршрута
                "bus_velocity": "скорость", //скорость движения автобусов от 0 до 1000 км/ч
                "bus_wait_time": "время"    //время ожидания автобусов в минутах
            }
        },
        {
            "render_settings": {            //настройки для отрисовки карты
            "bus_label_font_size": 20,      //размер шрифта названия маршрутов
                    "bus_label_offset": [   //смещение названия маршрута
                        7,
                        15
                    ],
                    "color_palette": [      //цветовая палитра, неограниченное кол-во цветов
                        "green",
                        [
                            255,
                            160,
                            0
                        ],
                        "red"
                    ],
                    "height": 200,              //высота карты
                    "line_width": 14,           //толщина линий маршрутов
                    "padding": 30,              //отступ от края
                    "stop_label_font_size": 20, //размер шрифта названия остановок
                    "stop_label_offset": [      //смещение названия остановки
                        7,
                        -3
                    ],
                    "stop_radius": 5,           //радиус точки остановки
                    "underlayer_color": [       //цвет подложки текста
                        255,
                        255,
                        255,
                        0.85
                    ],
                    "underlayer_width": 3,      //толщина подложки текста
                    "width": 200                //ширина карты
               }
          }
     }
}

//формат запросов к базе

{
    "serialization_settings": {
        "file": "имя_файла_для_сохранения_базы"
    },
    {
        "stat_requests": [
            {
                "id": 1,                //id запроса
                "type": "Bus",          //тип Bus - получение информации о маршруте
                "name": "имя_маршрута",
            },
            {
                "id": 2,
                "type": "Stop",         //тип Stop - получение информации об остановке
                "name": "имя_остановки"
            },
            {
                "id": 3,
                "type": "Route",
                "from": "имя_остановки1", //получение информации о самом быстром маршруте
                "to": "имя_остановки2"    //от остановки `from` до остановки `to`
            },
            {
                "id": 4,
                "type": "Map"             //вывод карты в формате .svg
            },
            ...
        ]
    }
}

